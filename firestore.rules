rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // üë§ USERS COLLECTION
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // üåæ PRODUCTS COLLECTION
    match /products/{productId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.farmerId == request.auth.uid;
      // Modified to allow quantity/stock updates during order completion
      allow update: if request.auth != null && (
        // Farmer can update everything
        resource.data.farmerId == request.auth.uid || 
        // Any authenticated user can update quantity only
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(["quantity"]) ||
        // Allow stock updates for order completion
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(["stock"])
      );
      allow delete: if request.auth != null && resource.data.farmerId == request.auth.uid;
    }

    // üì¶ ORDERS COLLECTION
    match /orders/{orderId} {
      // Allow buyer to read their own orders
      allow read: if request.auth != null && resource.data.buyerId == request.auth.uid;

      // Allow farmer to read orders that belong to them
      allow read: if request.auth != null && resource.data.farmerId == request.auth.uid;

      // Allow buyer to create orders for themselves
      // Simplified to allow delivery/pickup fields without strict validation
      allow create: if request.auth != null 
        && request.resource.data.buyerId == request.auth.uid;

      // Allow farmer to update order status and delivery info
      allow update: if request.auth != null
        && resource.data.farmerId == request.auth.uid
        && request.resource.data.status in ["pending", "out-for-delivery", "completed", "cancelled"];

      // Allow buyer to cancel their own pending orders
      allow update: if request.auth != null
        && resource.data.buyerId == request.auth.uid
        && resource.data.status in ["pending", "Pending"]
        && request.resource.data.status == "cancelled"
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(["status", "cancelledAt"]);

      // Allow buyer to mark their completed orders as reviewed
      allow update: if request.auth != null
        && resource.data.buyerId == request.auth.uid
        && resource.data.status == "completed"
        && request.resource.data.reviewed == true
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(["reviewed", "reviewedAt"]);

      // No deletes for anyone
      allow delete: if false;
    }

    // üõí CART COLLECTION
    match /cart/{cartId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // üí¨ REVIEWS COLLECTION
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // ‚≠ê RATINGS COLLECTION
    match /ratings/{ratingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Remove duplicate ratings match
    match /farmers/{farmerId}/ratings/{ratingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // üí∞ WALLETS COLLECTION
    match /wallets/{userId} {
      // Users can only read and write their own wallet
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // üí≥ TRANSACTIONS COLLECTION
    match /transactions/{transactionId} {
      // Users can only read their own transactions
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Users can only create transactions for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // No updates or deletes allowed - transactions are immutable
      allow update: if false;
      allow delete: if false;
    }

    // üå± COMMUNITY POSTS COLLECTION
    match /community_posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if request.auth != null;
      // Users can create posts for themselves
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      // Authors can update their own posts, or anyone can update likes/likedBy/commentCount
      allow update: if request.auth != null && (
        resource.data.authorId == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'commentCount'])
      );
      // Authors can delete their own posts
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    // üí¨ COMMUNITY COMMENTS COLLECTION
    match /community_comments/{commentId} {
      // Anyone authenticated can read comments
      allow read: if request.auth != null;
      // Users can create comments for themselves
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      // Authors can update their own comments
      allow update: if request.auth != null && resource.data.authorId == request.auth.uid;
      // Authors can delete their own comments
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
  }
}